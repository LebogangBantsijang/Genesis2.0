<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/volume_settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/listDivider" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            android:text="@string/enable_audio_fx" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            android:text="@string/extra_volume" />

        <SeekBar
            android:id="@+id/gain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="15"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            android:text="@string/preeq_gain" />

        <SeekBar
            android:id="@+id/preEq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="15"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            android:text="@string/compressor"/>

        <SeekBar
            android:id="@+id/compressor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="15"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            android:text="@string/posteq_gain"/>

        <SeekBar
            android:id="@+id/postEq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="15"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            android:text="@string/limiter"/>

        <SeekBar
            android:id="@+id/limiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="15"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>