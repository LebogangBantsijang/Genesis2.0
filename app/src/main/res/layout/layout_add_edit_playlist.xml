<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal|bottom">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/artView"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:background="@drawable/ic_round_add_24"
        app:civ_circle_background_color="?colorBackgroundFloating"
        app:civ_border_width="2dp"
        app:civ_border_color="?colorPrimary"
        app:civ_border_overlay="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="@string/add_cover_image"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_edit_background"
        android:inputType="textPersonName"
        android:padding="14dp"
        android:layout_margin="16dp"
        android:maxLines="1"
        android:autofillHints="@string/playlist_name"
        android:hint="@string/playlist_name" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cornerRadius="8dp"
        android:text="@string/save" />

</LinearLayout>