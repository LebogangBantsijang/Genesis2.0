<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/coverView"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:background="?selectableItemBackground"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <TextView
        android:id="@+id/subtitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:background="?selectableItemBackground"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addToListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:text="@string/add_to_playlist"
                android:textColor="?colorControlNormal"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                app:drawableEndCompat="@drawable/ic_forward"
                app:drawableTint="?colorControlNormal"
                app:drawableStartCompat="@drawable/ic_music_library_ios"/>

            <TextView
                android:id="@+id/albumView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:text="@string/view_album"
                android:textStyle="bold"
                android:textColor="?colorControlNormal"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                app:drawableEndCompat="@drawable/ic_forward"
                app:drawableTint="?colorControlNormal"
                app:drawableStartCompat="@drawable/ic_music_record_24" />

            <TextView
                android:id="@+id/artistView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:text="@string/view_artist"
                android:textColor="?colorControlNormal"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                app:drawableEndCompat="@drawable/ic_forward"
                app:drawableTint="?colorControlNormal"
                app:drawableStartCompat="@drawable/ic_user_24"/>

            <TextView
                android:id="@+id/infoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:text="@string/info"
                android:textColor="?colorControlNormal"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                app:drawableEndCompat="@drawable/ic_forward"
                app:drawableTint="?colorControlNormal"
                app:drawableStartCompat="@drawable/ic_info"/>

            <TextView
                android:id="@+id/editView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:text="@string/modify"
                android:textColor="?colorControlNormal"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                app:drawableEndCompat="@drawable/ic_forward"
                app:drawableTint="?colorControlNormal"
                app:drawableStartCompat="@drawable/ic_edit"/>

            <TextView
                android:id="@+id/shareView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?selectableItemBackground"
                android:text="@string/share"
                android:textColor="?colorControlNormal"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                app:drawableTint="?colorControlNormal"
                app:drawableStartCompat="@drawable/ic_connect"
                app:drawableEndCompat="@drawable/ic_forward" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>