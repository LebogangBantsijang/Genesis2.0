<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:viewBindingIgnore="true">

    <ImageView
        android:id="@+id/backView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.4"
        android:contentDescription="@string/add_cover_image"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_album_image_overlay"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/coverView"
                android:layout_width="56dp"
                android:layout_height="56dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/subtitleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    />

            </LinearLayout>

            <ImageButton
                android:id="@+id/minimiseView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="10dp"
                android:tint="?colorPrimary"
                android:backgroundTint="?colorButtonNormal"
                android:contentDescription="@string/minimise"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/shareView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="?colorButtonNormal"
                android:padding="6dp"
                android:layout_margin="4dp"
                android:tint="?colorPrimary"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_connect" />

            <ImageButton
                android:id="@+id/volumeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="?colorButtonNormal"
                android:padding="6dp"
                android:layout_margin="4dp"
                android:tint="?colorPrimary"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_round_volume_up_24" />

            <ImageButton
                android:id="@+id/queueView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:backgroundTint="?colorButtonNormal"
                android:padding="6dp"
                android:layout_margin="4dp"
                android:tint="?colorPrimary"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_playlist" />

        </LinearLayout>

        <View
            android:layout_width="156dp"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="3"
                android:text="00:00"/>

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/durationView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:minEms="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="16dp"
                android:background="@null"
                android:tint="?colorPrimary"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_repeat" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_circle"
                android:backgroundTint="?colorButtonNormal"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:tint="?colorPrimary"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_skip_to_previous" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_circle"
                android:backgroundTint="?colorButtonNormal"
                android:padding="18dp"
                android:layout_margin="4dp"
                android:tint="?colorPrimary"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_play" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_circle"
                android:backgroundTint="?colorButtonNormal"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:tint="?colorPrimary"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_skip_to_next" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="16dp"
                android:background="@null"
                android:tint="?colorPrimary"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_shuffle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_44hz"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/frequency"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_48hz"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>