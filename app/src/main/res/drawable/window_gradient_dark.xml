<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/darkBackground"
                android:centerColor="@color/darkColor3"
                android:endColor="@color/darkColor2"
                android:centerY="0.8"
                android:type="linear"
                android:useLevel="true"
                android:angle="90"/>
        </shape>
    </item>

    <item
        android:gravity="center"
        android:width="256dp"
        android:height="256dp">
        <inset
            android:drawable="@drawable/ic_audio_wave_3"/>
    </item>

</layer-list>