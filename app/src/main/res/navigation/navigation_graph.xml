<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/songsFragment">

    <fragment
        android:id="@+id/songsFragment"
        android:name="com.lebogang.genesis.ui.fragments.SongsFragment"
        tools:layout="@layout/fragment_songs"
        android:label="@string/songs" >
        <action
            android:id="@+id/action_songsFragment_to_audioOptionsDialog"
            app:destination="@id/audioOptionsDialog"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.lebogang.genesis.ui.fragments.StatisticsFragment"
        android:label="@string/statistics"
        tools:layout="@layout/fragment_statistics">
        <action
            android:id="@+id/action_statisticsFragment_to_statisticsDialog"
            app:destination="@id/statisticsDialog"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/albumsFragment"
        android:name="com.lebogang.genesis.ui.fragments.AlbumsFragment"
        android:label="AlbumsFragment"
        tools:layout="@layout/fragment_albums">
        <action
            android:id="@+id/action_albumsFragment_to_viewAlbumFragment2"
            app:destination="@id/viewAlbumFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/artistFragment"
        android:name="com.lebogang.genesis.ui.fragments.ArtistFragment"
        android:label="ArtistFragment"
        tools:layout="@layout/fragment_artists">
        <action
            android:id="@+id/action_artistFragment_to_viewArtistFragment2"
            app:destination="@id/viewArtistFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/editAudioFragment"
        android:name="com.lebogang.genesis.ui.fragments.EditAudioFragment"
        android:label="@string/edit_tags"
        tools:layout="@layout/fragment_edit_audio"/>
    <fragment
        android:id="@+id/infoAudioFragment"
        android:name="com.lebogang.genesis.ui.fragments.InfoAudioFragment"
        android:label="@string/info"
        tools:layout="@layout/fragment_audio_info"/>
    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.lebogang.genesis.ui.fragments.PlaylistFragment"
        android:label="@string/playlists"
        tools:layout="@layout/fragment_playlist">
        <action
            android:id="@+id/action_playlistFragment_to_viewPlaylistFragment2"
            app:destination="@id/viewPlaylistFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_playlistFragment_to_updatePlaylistDialog"
            app:destination="@id/updatePlaylistDialog"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/viewAlbumFragment"
        android:name="com.lebogang.genesis.ui.fragments.ViewAlbumFragment"
        android:label="@string/tracks"
        tools:layout="@layout/fragment_view_album">
        <action
            android:id="@+id/action_viewAlbumFragment_to_audioOptionsDialog"
            app:destination="@id/audioOptionsDialog"
            app:launchSingleTop="true"/>
    </fragment>
    <fragment
        android:id="@+id/viewArtistFragment"
        android:name="com.lebogang.genesis.ui.fragments.ViewArtistFragment"
        android:label="@string/artist_tracks"
        tools:layout="@layout/fragment_artist_view">
        <action
            android:id="@+id/action_viewArtistFragment_to_audioOptionsDialog"
            app:destination="@id/audioOptionsDialog"
            app:launchSingleTop="true"/>
    </fragment>
    <fragment
        android:id="@+id/viewPlaylistFragment"
        android:name="com.lebogang.genesis.ui.fragments.ViewPlaylistFragment"
        android:label="@string/playlist_tracks"
        tools:layout="@layout/fragment_view_playlist"/>
    <dialog
        android:id="@+id/audioOptionsDialog"
        android:name="com.lebogang.genesis.ui.dialogs.AudioOptionsDialog"
        tools:layout="@layout/dialog_audio_options">
        <action
            android:id="@+id/action_audioOptionsDialog_to_editAudioFragment"
            app:destination="@id/editAudioFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_audioOptionsDialog_to_infoAudioFragment"
            app:destination="@id/infoAudioFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_audioOptionsDialog_to_viewArtistFragment"
            app:destination="@id/viewArtistFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_audioOptionsDialog_to_viewAlbumFragment"
            app:destination="@id/viewAlbumFragment"
            app:launchSingleTop="true" />
    </dialog>
    <dialog
        android:id="@+id/addPlaylistDialog"
        android:name="com.lebogang.genesis.ui.dialogs.AddPlaylistDialog"
        tools:layout="@layout/dialog_add_playlist"/>
    <dialog
        android:id="@+id/selectPlaylistDialog"
        android:name="com.lebogang.genesis.ui.dialogs.SelectPlaylistDialog"
        tools:layout="@layout/item_local_select_playlist"/>
    <dialog
        android:id="@+id/updatePlaylistDialog"
        android:name="com.lebogang.genesis.ui.dialogs.UpdatePlaylistDialog"
        tools:layout="@layout/dialog_update_playlist"/>
    <dialog
        android:id="@+id/statisticsDialog"
        android:name="com.lebogang.genesis.ui.dialogs.StatisticsDialog"
        tools:layout="@layout/dialog_statistic"/>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.lebogang.genesis.ui.fragments.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.lebogang.genesis.ui.fragments.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings"/>
    <dialog
        android:id="@+id/backgroundDialog"
        android:name="com.lebogang.genesis.ui.dialogs.BackgroundDialog"
        tools:layout="@layout/dialog_background"/>
    <dialog
        android:id="@+id/filterDialog"
        android:name="com.lebogang.genesis.ui.dialogs.FilterDialog"
        tools:layout="@layout/dialog_filter"/>
    <dialog
        android:id="@+id/queueDialog"
        android:name="com.lebogang.genesis.ui.dialogs.QueueDialog"
        tools:layout="@layout/dialog_queue"/>
    <dialog
        android:id="@+id/themeDialog"
        android:name="com.lebogang.genesis.ui.dialogs.ThemeDialog"
        tools:layout="@layout/dialog_theme"/>
</navigation>